<%- include("./partials/header") %>
    <%- include("./partials/nav") %>

        <div class="w-[100%] flex flex-col items-center justify-center mt-10 pb-10">
            <div >
                <h1 class="text-2xl font-bold border-2xl-black">Update Blog</h1>
                
            </div>
            <div class="w-[60%] bg-teal-50 rounded-xl shadow-xl border p-5 flex items-center justify-center mt-10">

                <form class="w-[60%] p-5 flex flex-col gap-5" action="/users/updateBlog/<%=currentBlog._id%>" method="post" enctype="multipart/form-data">
                    <div class="flex flex-col gap-1">
                        <label>Poster URL</label>
                        <input class="border-b border-gray-400 bg-teal-50 p-2 outline-0" type="url" name="blogPoster" value="<%=currentBlog.blogPoster%>">
                    </div>
                    <div class="flex flex-col gap-1">
                        <label>Title of Blog</label>
                        <input class="border-b border-gray-400 bg-teal-50 p-2 outline-0" type="text" name="blogTitle" placeholder="Title" value="<%=currentBlog.blogTitle%>">
                    </div>
                    <div class="flex flex-col gap-1">
                        <label>Content</label>
                        <textarea class="border border-gray-400 bg-teal-50 p-2 outline-0" rows="10" type="text" name="blogContent"><%=currentBlog.blogContent%></textarea>
                    </div>
                      
                    <button class="mt-5 bg-blue-500 py-2 rounded text-white font-semibold hover:bg-blue-600">Update Blog</button>
                </form>
            </div>
        </div>

        <%- include("./partials/footer") %>